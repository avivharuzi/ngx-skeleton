{
  "name": "ngx-skeleton-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href=\"/ngx-skeleton/\"",
    "build:dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"**/*.{ts,js,css,scss,html,json,md}\"",
    "format:staged": "pretty-quick --staged --pattern \"**/*.{ts,js,css,scss,html,json,md}\"",
    "start:lib": "ng build ngx-skeleton --watch",
    "build:lib": "ng build ngx-skeleton",
    "build:lib:dev": "ng build ngx-skeleton --configuration development",
    "test:lib": "ng test ngx-skeleton",
    "test:lib:without-watch": "ng test ngx-skeleton --watch false",
    "lint:lib": "ng lint ngx-skeleton",
    "copy:lib": "cp README.md dist/ngx-skeleton && cp LICENSE dist/ngx-skeleton",
    "publish:lib": "npm run lint:lib && npm run test:lib:without-watch && npm run build:lib && npm run copy:lib && cd dist/ngx-skeleton && npm publish --access public",
    "publish:app": "npm run build:lib && npm run build && angular-cli-ghpages --dir=dist/ngx-skeleton-app"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "bootstrap": "^5.0.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular-eslint/builder": "12.0.0",
    "@angular-eslint/eslint-plugin": "12.0.0",
    "@angular-eslint/eslint-plugin-template": "12.0.0",
    "@angular-eslint/schematics": "12.0.0",
    "@angular-eslint/template-parser": "12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "angular-cli-ghpages": "^1.0.0-rc.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.0",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "typescript": "~4.2.3"
  }
}
